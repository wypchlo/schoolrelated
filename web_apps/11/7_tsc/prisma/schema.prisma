generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model post {
    id Int @id @default(autoincrement())
    title String
    description String? @default("")
    content String
}

model comment {
    id Int @id @default(autoincrement())
    content String
}

model category {
    id Int @id @default(autoincrement())
    category String
    description String? @default("")
}
